<%= form_for(@job_application) do |f| %>

  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :job_id, :value => @job.id %>
    <%= f.label "Cover Letter" %><br>
    <%= f.text_area :cover_letter, :cols => 60, :rows => 20 %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
