<div class="page-header">
  <h1>Application for <%= @job_application.job.title %></h1>
</div>

<table class="table table-bordered">
  <tbody>
  <tr>
    <td>Name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>Phone</td>
    <td><%= @user.phone %></td>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Skills</td>
    <td><%= @user.skill_list %></td>
  </tr>
  </tbody>
</table>

<div class="page-header">
  <h1>Resume</h1>
</div>

<%= @user.resume.gsub(/\n/, '<br>').html_safe %>

<div class="page-header">
  <h1>Cover Letter</h1>
</div>

<%= @job_application.cover_letter.gsub(/\n/, '<br>').html_safe %>

<div class="page-header">
  <h1>Status</h1>
</div>

<%= form_for(@job_application) do |f| %>
    <%= f.collection_select :status_id, JobApplication::Status.all, :id, :name %><br>
    <%= f.submit "Change" , :class => "btn btn-default"%>
<% end %>