<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :skills %>
      <%= f.text_field :skill_list, :placeholder => "Add comma seperated tags" %>
    </div>

    <div class="field">
      <%= f.label :Resume %>
      <%= f.text_area :resume, :style => "width:500px; height:300px;" %>
    </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-default"%>
  </div>
<% end %>
